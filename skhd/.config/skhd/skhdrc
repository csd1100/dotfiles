# Open terminal
cmd - return : /Applications/kitty.app/Contents/MacOS/kitty \
                        -o allow_remote_control=yes --single-instance -d ~
cmd + shift - return : /Applications/kitty.app/Contents/MacOS/kitty \
                            --single-instance -o allow_remote_control=yes -d ~ \
                            --session ~/.config/kitty/sessions/home.session

# mode space for space creation and destroy
:: Space : sketchybar --trigger yabai-mode MODE=space

ctrl + alt - s ; Space

Space < escape ; default

Space < cmd + shift - n : yabai -m space --create
Space < cmd + shift - d : yabai -m space --destroy

Space < ctrl + alt - s : sketchybar --trigger yabai-mode MODE=default; skhd -k "escape";

# Navigation
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

cmd - left : yabai -m window --focus stack.recent
cmd - down : yabai -m window --focus stack.next
cmd - up : yabai -m window --focus stack.prev
cmd - right : yabai -m window --focus stack.recent
# Navigate workspaces
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7

cmd + ctrl - 1 : yabai -m space --focus 8
cmd + ctrl - 2 : yabai -m space --focus 9
cmd + ctrl - 3 : yabai -m space --focus 10
cmd + ctrl - 4 : yabai -m space --focus 11
cmd + ctrl - 5 : yabai -m space --focus 12
cmd + ctrl - 6 : yabai -m space --focus 13
cmd + ctrl - 7 : yabai -m space --focus 14

cmd + alt - 1 : yabai -m space --focus 15
cmd + alt - 2 : yabai -m space --focus 16
cmd + alt - 3 : yabai -m space --focus 17
cmd + alt - 4 : yabai -m space --focus 18
cmd + alt - 5 : yabai -m space --focus 19
cmd + alt - 6 : yabai -m space --focus 20
cmd + alt - 7 : yabai -m space --focus 21

cmd + shift - left : yabai -m space --focus recent
cmd + shift - right : yabai -m space --focus recent
cmd + shift - down : yabai -m space --focus next
cmd + shift - up : yabai -m space --focus prev

# Moving windows
cmd + shift - h : yabai -m window --warp west
cmd + shift - j : yabai -m window --warp south
cmd + shift - k : yabai -m window --warp north
cmd + shift - l : yabai -m window --warp east

# Move focused container to workspace
cmd + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
cmd + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
cmd + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
cmd + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
cmd + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5
cmd + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6
cmd + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7

cmd + ctrl + shift - 1 : yabai -m window --space 8; yabai -m space --focus 8
cmd + ctrl + shift - 2 : yabai -m window --space 9; yabai -m space --focus 9
cmd + ctrl + shift - 3 : yabai -m window --space 10; yabai -m space --focus 10
cmd + ctrl + shift - 4 : yabai -m window --space 11; yabai -m space --focus 11
cmd + ctrl + shift - 5 : yabai -m window --space 12; yabai -m space --focus 12
cmd + ctrl + shift - 6 : yabai -m window --space 13; yabai -m space --focus 13
cmd + ctrl + shift - 7 : yabai -m window --space 14; yabai -m space --focus 14

cmd + alt + shift - 1 : yabai -m window --space 15; yabai -m space --focus 15
cmd + alt + shift - 2 : yabai -m window --space 16; yabai -m space --focus 16
cmd + alt + shift - 3 : yabai -m window --space 17; yabai -m space --focus 17
cmd + alt + shift - 4 : yabai -m window --space 18; yabai -m space --focus 18
cmd + alt + shift - 5 : yabai -m window --space 19; yabai -m space --focus 19
cmd + alt + shift - 6 : yabai -m window --space 20; yabai -m space --focus 20
cmd + alt + shift - 7 : yabai -m window --space 21; yabai -m space --focus 21

# Resize windows
cmd + shift + lalt  - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
cmd + shift + lalt  - j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
cmd + shift + lalt  - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
cmd + shift + lalt  - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# Equalize size of windows
cmd + shift - b : yabai -m space --balance

# restart
cmd + shift - r : brew services restart skhd && brew services restart yabai && brew services restart sketchybar
cmd + shift - c : brew services restart skhd

# Float / Unfloat window
cmd + shift - space : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

# close a window
cmd - q : echo "null" > /dev/null
cmd + shift - q : yabai -m window --close

# mode brightness for secondary keyboard
:: brightness : sketchybar --trigger yabai-mode MODE=brightness

ctrl + alt - b ; brightness

brightness < escape ; default

brightness < h : skhd -k "0x6B"
brightness < j : skhd -k "0x6B"
brightness < k : skhd -k "0x71"
brightness < l : skhd -k "0x71"

brightness < ctrl + alt - b : sketchybar --trigger yabai-mode MODE=default; skhd -k "escape";

:: restart : sketchybar --trigger yabai-mode MODE=restart
ctrl + alt - r ; restart

restart < ctrl + alt - r : sketchybar --trigger yabai-mode MODE=default; skhd -k "escape";

restart < cmd + shift - y : brew services restart yabai
restart < cmd + shift - s : brew services restart sketchybar
restart < cmd + shift - c : brew services restart skhd

restart < escape ; default

:: vm
ctrl + alt - p ; vm
vm < ctrl + alt - p ; default
