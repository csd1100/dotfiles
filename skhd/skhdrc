# Open terminal
cmd - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~

# Navigation
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# Navigate workspaces
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd + shift - down : yabai -m space --focus next
cmd + shift - up : yabai -m space --focus prev

# Moving windows
cmd + shift - h : yabai -m window --warp west
cmd + shift - j : yabai -m window --warp south
cmd + shift - k : yabai -m window --warp north
cmd + shift - l : yabai -m window --warp east

# Move focused container to workspace
cmd + shift - left : yabai -m window --space prev; yabai -m space --focus prev
cmd + shift - right : yabai -m window --space next; yabai -m space --focus next
cmd + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1
cmd + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2
cmd + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3
cmd + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4
cmd + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5
cmd + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6
cmd + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7
cmd + shift - 8 : yabai -m window --space 8; yabai -m space --focus 8

# create desktop and follow focus

cmd + shift - n : yabai -m space --create && \
                  yabai -m space --focus next

cmd + shift - d : yabai -m space --destroy

# Resize windows
cmd + shift + lalt  - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
cmd + shift + lalt  - j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
cmd + shift + lalt  - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
cmd + shift + lalt  - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# Equalize size of windows
cmd + shift - b : yabai -m space --balance

# Rotate window tree
cmd + shift - r : yabai -m space --rotate 90

# Enable / Disable gaps in current workspace
cmd + shift - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# Float / Unfloat window
cmd + shift - space : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

# Make window native fullscreen
cmd + shift - f : yabai -m window --toggle native-fullscreen
