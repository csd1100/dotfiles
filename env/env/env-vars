#!/usr/bin/env zsh

# default editor
export EDITOR=nvim

# spaceship prompt zsh
SPACESHIP_PROMPT_ORDER=(
  time          # Time stamps section
  user          # Username section
  dir           # Current directory section
  git           # Git section (git_branch + git_status)
  venv          # virtualenv section
  conda         # conda virtualenv section
  async
  exec_time     # Execution time
  line_sep      # Line break
  exit_code     # Exit code section
  char          # Prompt character
)

# source overrides
if [ -f "$HOME/env/overrides/env-vars" ]
then
    source "$HOME/env/overrides/env-vars"
fi

# DOCKER PS FORMAT
export DOCKER_FORMAT="\\nID\\t{{.ID}}\\nIMAGE\\t{{.Image}}\\nCOMMAND\\t{{.Command}}\\nCREATED\\t{{.RunningFor}}\\nSTATUS\\t{{.Status}}\\nPORTS\\t{{.Ports}}\\nNAMES\\t{{.Names}}\\n"

# PATH
export PATH="$HOME/bin:$PATH"
export PATH="$HOME/bin/helpers:$PATH"
export PATH="$HOME/.local/bin:$PATH"

#nvm
export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm

# CONFIG
export CONFIG="$HOME/.config"

unameOut="$(uname -s)"

if [ $unameOut == "darwin" ]; then
    export JAVA_11_HOME="/opt/homebrew/Cellar/openjdk@11/11.0.19/"
    export JAVA_17_HOME="/opt/homebrew/Cellar/openjdk@17/17.0.7/"
    export JAVA_20_HOME="/opt/homebrew/Cellar/openjdk/20/"
elif [ $unameOut == "linux" ]; then
    export JAVA_11_HOME="/usr/lib/jvm/java-11-openjdk/"
    export JAVA_17_HOME="/usr/lib/jvm/java-17-openjdk/"
    export JAVA_20_HOME="/usr/lib/jvm/java-20-openjdk/"
fi
